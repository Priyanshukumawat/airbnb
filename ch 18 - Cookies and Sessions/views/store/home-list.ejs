<%- include('../partials/head') -%>
  </head>

  <body>
    <%- include('../partials/header') -%>
      <header>
        <h1 class="font-bold text-2xl">Here are our Registered Homes:</h1>
        <main class="min-h-screen bg-gray-50 py-8 px-4">
          <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% registeredHomes.forEach(home=> { %>
              <div
                class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition transform hover:-translate-y-1 duration-200">
                <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 sm:h-56 object-cover">
                <div class="p-4">
                  <h2 class="font-semibold text-lg text-gray-800 mb-2">
                    <%= home.houseName %>
                  </h2>
                  <p class="text-gray-600 mb-1"><strong>Price:</strong> Rs.<%= home.pricePerNight %> / night</p>
                  <p class="text-gray-600 mb-1"><strong>Location:</strong>
                    <%= home.location %>
                  </p>
                  <p class="text-gray-600 mb-2"><strong>Rating:</strong>
                    <%= home.rating %> â˜…
                  </p>
                  <div class="flex justify-start items-center gap-5">

                    <a href="/homes/<%= home._id %>"
                      class="inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition">
                      Details
                    </a>
                    <%- include('../partials/favourites', {home: home} ) %>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
        </main>

      </header>
  </body>

  </html>